rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Permetti a qualsiasi utente autenticato di leggere e scrivere file
    // nella cartella 'invoices' e in tutte le sue sottocartelle.
    match /invoices/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}